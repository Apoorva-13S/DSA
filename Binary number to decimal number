//WAP to convert a binary number to decimal number .
#include<stdio.h>
#include<math.h>
int main(){
    int num ;
    printf("Enter the binary number:" );
    scanf("%d",&num);
    int sum = 0 , base = 0;
    while(num !=0){
        int rem = num%10;
        sum = rem * pow(2,base);
        base++;
        num =num/10;
    }
    printf("Decimal number = %d", sum);
    return 0;
}

//WAP to convert a binary number to decimal number [2nd method].
#include<stdio.h>
#include<math.h>
int main(){
    int num ;
    printf("Enter the binary number:" );
    scanf("%d",&num);
    int sum = 0 , base = 1;
    while(num !=0){
        int rem = num%10;
        sum = rem * base;
        base=base*2;
        num =num/10;
    }
    printf("Decimal number = %d", sum);
    return 0;
}
