//WAP to convert binary to hrxadecimal number.
#include<stdio.h>
#include<string.h>
#include<stdlib.h>
int decimal(int num){
     int sum =0;
    int base =1;
    while(num!=0){
        int rem = num%10;
        sum += rem * base ;
        base = base * 2;
        num = num/10;
    }
    return sum;
}
char* hexa(int num){
    char *hexa=(char*)calloc(100,sizeof(char));
    while(num!=0){
        int rem = num%16;
        char str[2];
        if(rem >= 0 && rem <= 9){
            sprintf(str , "%d" , rem);
        }
        else if(rem == 10){
            str[0] = 'A';
        }
        else if(rem == 11){
            str[0] = 'B';
        }
        else if(rem == 12){
            str[0] = 'C';
        }
        else if(rem == 13){
            str[0] = 'D';
        }
        else if(rem == 14){
            str[0] = 'E';
        }
        else{
            str[0] = 'F';
        }
        str[1] = '\0';
        strcat(hexa,str);
        num = num/16;
    }
    strrev(hexa);
    return hexa;
}
int main(){
    int n;
    printf("Enter the binary number : ");
    scanf("%d",&n);
    int dec=decimal(n);
    char* hex = hexa(dec);
    puts(hex);
    return 0;
}
